{
  "name": "thecodepulse",
  "displayName": "TheCodePulse",
  "description": "Monitors function logic changes to prevent runtime crashes in dependent code.",
  "version": "0.0.1",
  "icon": "images/cp.png",
  "publisher": "Lakshay",
  "engines": {
    "vscode": "^1.90.0"
  },
  "activationEvents": ["onStartupFinished"],
  "main": "./extension.js",

  "contributes": {
    "configuration": {
      "title": "CodePulse Settings",
      "properties": {
        "codePulse.watchFiles": {
          "type": "array",
          "description": "List of Python files or folders CodePulse should monitor.",
          "items": {
              "type": "string"
          },
          "default": []
      }
      }
    }
  },

  "repository": {
    "type": "git",
    "url": "https://github.com/1lakshay/CodePulse"
  },
  "categories": [
    "Other",
    "Programming Languages",
    "Linters"
  ]
}
